<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
      
 <!-- XSL generated by LR 2009; -->


    <xsl:template match="/">
        <xsl:apply-templates />
    </xsl:template>

    <!-- Pagina principale -->
    <xsl:template match="log">
        <html>
                 <head>
                     <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
                     <link rel="StyleSheet" href=".\LogTransformer.css" type="text/css" media="screen" />
                   <link rel="StyleSheet" href=".\LogTransformerPrint.css" type="text/css" media="print" />
                     <title>LOGS</title>
                         
                 </head>
                  <body>           
                  <div id="LogTitle" title="Log Title">               
                       LOGS               
                   </div>
                   <xsl:apply-templates />
                   <div id="About">
                      Template by LR 2009 - (C) Thera SpA
                   </div>
               </body>
        </html>
    </xsl:template>

    <!-- Blocco informazione -->
    <xsl:template match="log-info">
        <div id="LogInfo">
            <div id="LogInfoContent">
                <br/>
                    <xsl:apply-templates />             
                 <br/>
             </div>
         </div>
    </xsl:template>

    <xsl:template match="date">
  
           <span id="LogInfoDateTitle">
                Date:
            </span>
            <span id="LogInfoDate">
                <xsl:apply-templates />
            </span>            
            <br/>   
    </xsl:template>

    <xsl:template match="time">
             <span id="LogInfoTimeTitle">
                Time:
            </span>
            <span id="LogInfoTime">
                <xsl:apply-templates />
            </span>            
            <br/>   
    </xsl:template>

    <xsl:template match="level-number">  
           <span id="LogInfoLevelTitle">
                Level:
            </span>
            <span id="LogInfoLevelNumber">
                <xsl:apply-templates />
 - 
            </span>            
   
    </xsl:template>

    <xsl:template match="level-label">
             <span id="LogInfoLevelLabel">
                    <xsl:apply-templates />
            </span>            
            <br/>
    </xsl:template>
 
    <xsl:template match="group">  
           <span id="LogInfoGroupOperationTitle">
                Group - Operation:
            </span>
            <span id="LogInfoGroup">
                <xsl:apply-templates />
 - 
            </span>            
            
    </xsl:template>

     <xsl:template match="operation">
        <span id="LogInfoOperation">
                <xsl:apply-templates />
         </span>            
        <br/>
    </xsl:template>
    
    <xsl:template match="message">
        <span id="LogInfoMessageTitle">
            Message(s):
        </span>
        <br/>
         <span id="LogInfoMessage">
             <pre>[<xsl:apply-templates /> ]</pre>            
         </span>         
         <br/>
    </xsl:template>
    
    <xsl:template match="error">
        <span id="LogInfoErrorTitle">
            Error(s):
        </span>
        <br/>
         <span id="LogInfoError">             
             <xsl:apply-templates />             
         </span>         
         <br/>
    </xsl:template>
    
    <xsl:template match="ERR">        
         <span id="LogInfoErr">
             
                 [<pre><xsl:apply-templates /></pre>]
         </span>         
         <br/>
    </xsl:template>

</xsl:stylesheet>

